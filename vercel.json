{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.funsoccer.app/api/:path*"
    },
    {
      "source": "/health",
      "destination": "https://api.funsoccer.app/health"
    },
    {
      "source": "/ws/:path*",
      "destination": "https://api.funsoccer.app/ws/:path*"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,POST,PUT,DELETE,OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type,Authorization"
        }
      ]
    }
  ]
}